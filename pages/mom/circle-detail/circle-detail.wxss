@import '/pages/mom/cell-post-top/cell-post-top.wxss';
@import '/pages/mom/cell-post/cell-post.wxss';

.view-root {
  display: flex;
  flex-direction: column;
}

.view-header {
  display: flex;
  align-items: center;
  width: 100%;
  height: 500rpx;
}

.view-header .header-background {
  position: absolute;
  z-index: -1;
  width: 100%;
  height: 500rpx;
  flex: none;
}

.view-header .header-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 500rpx;
}

.header-info .header-icon {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  margin-top: 60rpx;
  flex: none;
}

.header-info .header-name {
  color: #090909;
  font-size: 34rpx;
  margin-top: 30rpx;
}

.header-info .header-no-attention {
  color: red;
  font-size: 28rpx;
  margin-top: 30rpx;
}

.header-info .header-attention {
  color: #acadaa;
  font-size: 28rpx;
  margin-top: 30rpx;
}

.header-info .header-introduction {
  color: #494848;
  font-size: 28rpx;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
}

.view-tab {
  display: flex;
  background: white;
  text-align: center;
}

.view-tab .tab-red {
  color: red;
  font-size: 32rpx;
  width: 375rpx;
  padding: 20rpx 0 20rpx 0;
}

.view-tab .tab-gray {
  color: #acadaa;
  font-size: 32rpx;
  width: 375rpx;
  padding: 20rpx 0 20rpx 0;
}

.view-top {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
}

.view-other {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
}
