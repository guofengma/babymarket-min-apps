.view-root {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.view-top {
  position: fixed;
  top: 0;
  z-index: 20;
}

.swiper-view {
  margin-top: 95rpx;
  height: 100%;
}

.swiper-view .swiper-container {
  height: 100%;
}

.swiper-view .swiper-container .scroll {
  height: 100%;
}

.search-view {
  background: white;
  padding: 20rpx;
}

.search {
  background: white;
  padding: 0rpx 20rpx 20rpx 20rpx;
}

.search-text {
  color: #acadaa;
  font-size: 22rpx;
  margin-bottom: 20rpx;
}

.search-list {
  display: flex;
  flex-wrap: wrap;
}

.search-record {
  color: #83c3bf;
  font-size: 24rpx;
  padding: 10rpx 15rpx 10rpx 15rpx;
  border-radius: 30rpx;
  border: 1rpx solid #83c3bf;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}

.hot {
  height: 100%;
}

.no-data {
  height: 100%;
}

.tab-layout .tab {
  font-size: 34rpx;
  padding: 20rpx 0rpx;
}