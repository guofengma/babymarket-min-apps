/* pages/my/sale-changed/sale-changed.wxss */
@import '/components/empty-view/empty-view.wxss';
.sale-exchange-page image{
  width: 100%;
  height: 100%;
}
.sale-change-banner{
  height: 614rpx;
  width: 100%;
  overflow: hidden;
  position: relative
}
.sale-change-img,.sale-changed-item navigator{
  width: 100%;
  height: 100%;
}
.sale-changed-items{
  width: 100%;
  height:142rpx;
  display: flex;
  justify-content: space-around;
  flex-direction: row;
  position: absolute;
  bottom: 54rpx;
  font-size: 28rpx;
  color:#BE8E56;
}
.my-rules{
  width: 134rpx;
  height: 66rpx;
  position:absolute;
  right:0;
  top:28rpx
}
.sale-changed-item{
  height: 90rpx;
  text-align:center;
}
.sale-changed-item image{
  width:90rpx;
  height: 100%;
}
.title{
  margin-top: 10rpx;
}
.swiper {
  height:60rpx;
  width: 100%;
  background: #212121;
  overflow: hidden;
}
.newsInfo{
  width:90%;
  margin:0 auto;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  font-size:24rpx;
  color: #6A6A6A;
  line-height: 60rpx;
}
.change-content{
  background: #fff;
}
.changeType1{
 padding: 0 14rpx;
 box-sizing:border-box;
}
.changeType1{
  position: relative;
  height: 480rpx; 
}
.changeType1>.list:first-child{
  width:324rpx;
  height: 480rpx; 
  left:14rpx;
  top:0;
}
.changeType1 .list{
  width: 384rpx;
  height: 234rpx;
  border-radius: 10rpx;
  overflow: hidden;
  position:absolute;
  right:14rpx;
  top: 0;
}
.changeType1 .list:last-child{
  right:14rpx0;
  top:247rpx;
}
.listName{
  position: absolute;
  right: 0;
  top:0;
  background:#B6A581;
  padding: 5rpx 12rpx;
  font-size: 20rpx;
  border-bottom-left-radius:10rpx;
  color:#fff;
}
.change-item{
  color: #252525;
  font-weight: bold;
  font-size: 34rpx;
  padding: 29rpx 27rpx;
  background: #fff;
}
.changeType2{
  padding: 18rpx 0 18rpx 15rpx;
  background:#F2F2F2;
  text-align: center;
  overflow: hidden;
}
.changeType2 .list{
  width:350rpx;
  height:533rpx;
  overflow:hidden;
  border-radius:10px;
  float:left;
  margin-right: 18rpx;
  margin-bottom: 18rpx;
  background:#fff;
  box-sizing:border-box;
  padding-top:24rpx;

}
.changeType2 .listImg{
  width: 300rpx;
  height: 300rpx;
  margin: auto;
  margin-bottom: 15rpx;
}
.prdName{
  font-size: 24rpx;
  color: #808080;
  display:inline-block;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  width:145rpx;
}
.prdAmount{
  color:#B6A581;
  font-size: 30rpx;
  text-decoration: line-through;
}
.integralVal{
  font-size: 30rpx;
  color: #252525;
}
.exchangeBtn{
  width: 160rpx;
  height: 54rpx;
  margin: auto;
  font-size: 30rpx;
  border-radius: 10rpx;
  background: #B6A581;
  color: #fff;
  line-height: 54rpx;
  margin-top:10rpx;
}
.exchangeBtnDisable{
  background: #ccc;
  color:#9A9A9A;
}
.warnMsg{
  font-size: 18rpx;
  color: #CCCCCC;
  background: #F2F2F2;
  text-align: center;
  padding-bottom: 40rpx;
  padding-top:22rpx;
}
.XYcart{
  width:90rpx;
  height:90rpx;
  position:fixed;
  bottom:50rpx;
  border-radius:80rpx;
  background:rgba(0,0,0,0.5);
  left:12rpx;
}