/* recharge.wxss */
page{
    background: white;
}

.top-view {
    height: 216rpx;
    background: #f39138;
    display: flex;
    flex-direction: column;
    color: white;
}

.top-view .amount-view {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 216rpx;
}

.top-view .amount-view .amount {
    font-size: 100rpx;
    color: white;
}

.yuan {
    font-size: 30rpx;
    margin-top: 40rpx;
}

.my-points{
    margin: 54rpx 22rpx 82rpx 22rpx; 
    display: flex;
    font-size: 32rpx;
    color: #494848;
}

.points{
    color: #f39138;
    margin-right: 4rpx;
}

.recharge-cell{
    display: flex;
}

.recharge{
    border: 1rpx solid #acadaa;
    text-align: center;
    line-height: 84rpx;
    height: 84rpx;
    width: 130rpx;
    font-size: 32rpx;
    color: #acadaa;
    padding: 0rpx 15rpx;
    margin-left: 20rpx;
}

.recharge.active{
    border: 1rpx solid #f39138;
    color: #f39138;
}

.desp{
    display: flex;
    margin: 32rpx 22rpx;
    font-size: 26rpx;
    color: #494848;
}

.recharge-button{
    margin: 76rpx 22rpx 60rpx 22rpx;
    background: #f39138;
    border-radius: 10rpx;
    font-size: 32rpx;
    color: white;
    line-height: 88rpx;
    text-align: center;
    width: 706rpx;
}

.remark{
    font-size: 26rpx;
    color: #acadaa;
    margin: 0rpx 22rpx;
    line-height: 120%;
}