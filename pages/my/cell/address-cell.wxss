/*地址*/
.address-view {
  background-color: white;
  height: 195rpx;
  display: flex;
  align-items: center;
  width: 100%;
}

.address-view .left-icon{
    width: 50rpx;
    height: 50rpx;
    margin-left: 20rpx;
    flex-shrink: 0;
}

.address-view .right-view{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    width: 100%;
    height: 95rpx;
    margin: 50rpx 30rpx 50rpx 10rpx;
}

.address-row{
  display: flex;
  justify-content: space-between;
}

.address-name {
  font-size: 28rpx;
  color: #090909;
}

.address-mobile {
  font-size: 28rpx;
  color: #090909;
}

.address-detail {
  color: #090909;
  font-size: 28rpx;
}