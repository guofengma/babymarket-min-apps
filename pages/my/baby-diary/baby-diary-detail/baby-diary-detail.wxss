/* baby-diary-detail.wxss */

.bg-view{
    background: white;
}

.bg-view .image{
    width: 100%;
    height: 500rpx;
    background: lightblue;
}

.bg-view .date-age{
    display: flex;
    padding: 30rpx 22rpx 30rpx 22rpx;
}

.bg-view .sepline{
    background: #eeeeee;
    margin: 0rpx 22rpx;
    height: 2rpx;
}

.bg-view .content{
    padding: 30rpx 22rpx 40rpx 22rpx;
    font-size: 30rpx;
    color: #494848;
    line-height: 120%;
}

.date-age .date{
    font-size: 34rpx;
    color: #494848;
}

.date-age .age{
    font-size: 28rpx;
    color: #acadaa;
    margin-left: 30rpx;
}

.modify-button{
    margin-left: 22rpx;
    height: 80rpx;
    width: 706rpx;
    line-height: 80rpx;
    text-align: center;
    background: #ff5555;
    color: white;
    font-size: 32rpx;
    position: fixed;
    bottom: 40rpx;
}
