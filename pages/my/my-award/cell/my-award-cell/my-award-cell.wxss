.bg-view {
  display: flex;
  background: white;
  height: 90rpx;
  padding: 10rpx 30rpx;
  justify-content: space-between;
  align-items: center;
}

.left-view {
  display: flex;
  flex-direction: column;
}

.name {
  font-size: 28rpx;
  color: #26272a;
}

.source {
  font-size: 24rpx;
  color: #7d7f81;
  margin-top: 10rpx;
}

.amount {
  font-size: 32rpx;
  color: #1a1c1f;
}

.time {
  font-size: 22rpx;
  color: #b0b1b3;
}
