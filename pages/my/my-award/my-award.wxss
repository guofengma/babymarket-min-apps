/* my-award.wxss */
@import '/pages/my/my-award/cell/my-award-cell/my-award-cell.wxss';

.top-view {
    height: 337rpx;
    background: #f39138;
    display: flex;
    flex-direction: column;
    color: white;
}

.top-view .amount-view {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 195rpx;
}

.top-view .amount-view .amount {
    font-size: 100rpx;
    color: white;
}

.yuan {
    font-size: 30rpx;
    margin-top: 40rpx;
}

.bottom-buttons {
    margin-top: 10rpx;
    display: flex;
    justify-content: space-around;
    margin-left: 30rpx;
    margin-right: 30rpx;
}

.bottom-button {
    width: 180rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    font-size: 28rpx;
    color: white;
    border-radius: 10rpx;
    border: 2rpx solid white;
}

.today-get {
    width: 706rpx;
    height: 72rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 28rpx;
    color: #7d7d7f;
    padding: 0rpx 22rpx;
    background: #fffdea;
}

.today-get .right-view {
    display: flex;
}

.right-view .money {
    color: #f39138;
}

.list-title {
    padding: 0rpx 22rpx;
    height: 70rpx;
    display: flex;
    /* justify-content: space-between; */
    align-items: center;
    font-size: 24rpx;
    color: #7d7d7f;
    background: #eeeeee;
}

.list-title .list-title-item1{
    width: 27%;
    flex-shrink: 0;
    text-align: center;
}

.list-title .list-title-item2{
    width: 29%;
    flex-shrink: 0;
    text-align: center;
}

.list-title .list-title-item3{
    width: 20%;
    flex-shrink: 0;
    text-align: center;
}

.list-title .list-title-item4{
    width: 25%;
    flex-shrink: 0;
    text-align: right;
}
