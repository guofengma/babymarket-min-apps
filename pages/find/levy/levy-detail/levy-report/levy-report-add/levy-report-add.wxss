@import '/components/image-picker/image-picker.wxss';

page {
  background-color: white;
}

.view-root {
  background: white;
  display: flex;
  flex-direction: column;
  padding: 30rpx;
  border-top: 1rpx solid #f3f4f5;
}

.input-value {
  width: 100%;
  color: #090909;
  font-size: 28rpx;
}

.view-image {
  margin-top: 30rpx;
}

.view-image .image-title {
  color: #494848;
  font-size: 24rpx;
}

.view-image .image-picker {
  margin-top: 10rpx;
  padding-left: 10rpx;
}

.view-submit {
  color: #ff5555;
  border: 1rpx solid #ff5555;
  background: white;
  border-radius: 8rpx;
  font-size: 28rpx;
  margin: 60rpx 0rpx 30rpx 0rpx;
  padding: 8rpx 0rpx 8rpx 0rpx;
}
