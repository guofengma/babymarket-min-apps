@import '/components/banner/banner.wxss';
@import '/components/cell/cell-menu/cell-menu.wxss';

.view-root {
  display: flex;
  flex-direction: column;
  margin-top: 1rpx;
  margin-bottom: 120rpx;
}

.product-info {
  display: flex;
  flex-direction: column;
  padding: 44rpx 22rpx 0rpx 22rpx;
  background-color: white;
}

.product-title {
  font-size: 32rpx;
  color: #090909;
}

.number-view {
  display: flex;
  font-size: 32rpx;
  color: #090909;
  margin-top: 50rpx;
}

.number-view .total-number {
  color: #ff5555;
}

.now-price-view {
  margin-top: 24rpx;
  font-size: 30rpx;
  color: #090909;
  display: flex;
}

.now-price-view .now-price {
  color: #ff5555;
}

.now-price-view .now-price {
  color: #acadaa;
  margin-left: 10rpx;
}

.orignal-price {
  margin-left: 10rpx;
}

.apply-status {
  margin-top: 15rpx;
  width: 100%;
  text-align: center;
  font-size: 28rpx;
  color: #494848;
  height: 120rpx;
  line-height: 120rpx;
  border-bottom: 2rpx solid #acadaa;
}

.view-menu {
  margin-top: 20rpx;
}

.view-item {
  padding: 20rpx 0rpx 20rpx 0rpx;
}

.item-title {
  color: #494848;
}

.view-bottom {
  display: flex;
  width: 100%;
  height: 120rpx;
  position: fixed;
  bottom: 0;
  align-items: center;
  justify-content: center;
  background-color: white;
}

.view-btn {
  width: 700rpx;
  height: 90rpx;
  border-radius: 10rpx;
  line-height: 90rpx;
  background: #eee;
  text-align: center;
  font-size: 30rpx;
  color: #acadaa;
}

.view-btn.enabled {
  font-size: 30rpx;
  color: white;
  background: #ff5555;
}
