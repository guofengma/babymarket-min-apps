@import '/pages/find/clinic/cell-detail-time/cell-detail-time.wxss';
@import '/pages/find/clinic/cell-detail-title/cell-detail-title.wxss';
@import '/pages/find/clinic/cell-detail-info/cell-detail-info.wxss';
@import '/pages/find/clinic/cell-detail-discuss/cell-detail-discuss.wxss';

page {
  background: white;
}

.view-root {
  background: white;
  display: flex;
  flex-direction: column;
  margin-top: 1rpx;
  margin-bottom: 100rpx;
  padding: 30rpx;
}

.view-time {
  margin-top: 10rpx;
}

.view-title {
  margin-top: 30rpx;
}

.view-info {
  margin: 20rpx 0rpx 0rpx 20rpx;
}

.view-tips {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #acadaa;
}

.view-images {
  display: flex;
  margin-top: 20rpx;
  flex-direction: column;
}

.view-images .view-images-title {
  display: flex;
  align-items: center;
}

.view-images-title .images-title {
  font-size: 28rpx;
  color: #494848;
}

.view-images-title .images-arrow {
  width: 21rpx;
  height: 13rpx;
  flex: none;
  margin-left: 8rpx;
}

.view-images-list {
  display: flex;
  flex-wrap: wrap;
}

.view-images-list .cell-image {
  width: 200rpx;
  height: 200rpx;
  flex: none;
  background-color: white;
  margin-right: 15rpx;
  margin-top: 15rpx;
}

.view-discuss {
  display: flex;
  flex-direction: column;
  margin-top: 30rpx;
}

.view-discuss .discuss-title {
  font-size: 30rpx;
  color: #494848;
}

.view-discuss .discuss-list {
  margin-left: 15rpx;
  margin-right: 15rpx;
}

.view-send {
  display: flex;
  height: 100rpx;
  width: 100%;
  background: #eee;
  position: fixed;
  bottom: 0;
  justify-content: center;
  align-items: center;
}

.view-send .input-send {
  flex-grow: 1;
  padding: 8rpx 12rpx 8rpx 12rpx;
  margin: 0rpx 20rpx 0rpx 20rpx;
  background: white;
  font-size: 26rpx;
  color: #090909;
}
