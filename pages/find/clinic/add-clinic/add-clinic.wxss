/* add-clinic.wxss */

.main {
    position: relative;
    height: 100%;
    width: 100%;
    background: white;
}

.advisory-add-box {
    display: flex;
    flex-direction: column;
    padding: 30rpx 30rpx 30rpx 30rpx;
}

.advisory-add-item {
    margin-top: 20rpx;
}

.advisory-type-text {
    color: #494848;
    font-size: 24rpx;
}

.advisory-type {
    display: flex;
    justify-content: space-between;
    margin-top: 10rpx;
}

.advisory-input {
    margin-top: 10rpx;
    color: #090909;
    font-size: 32rpx;
}

.advisory-select {
    color: #494848;
    font-size: 32rpx;
    padding: 5rpx 0 5rpx 0;
}

.advisory-arrow {
    height: 25rpx;
    width: 25rpx;
}

.address-divide {
    width: 100%;
    height: 2rpx;
    background: gainsboro;
    margin-top: 10rpx;
}

.advisory-add {
    position: fixed;
    bottom: 0;
    width: 100%;
    background: white;
}

.advisory-add-bt {
    color: #715329;
    border: 1rpx solid #715329;
    background: white;
    border-radius: 10rpx;
    font-size: 28rpx;
    margin: 20rpx 20rpx 20rpx 20rpx;
    height: 70rpx;
    justify-content: center;
    display: flex;
    align-items: center;
}
