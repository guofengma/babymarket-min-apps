@import '/components/cell/cell-avatar/cell-avatar.wxss';

.cell-clinic {
  background: white;
  display: flex;
  flex-direction: column;
  padding: 20rpx;
}

.cell-clinic.top {
  border-top: 15rpx solid #f3f4f5;
}

.view-avatar {
  display: flex;
  align-items: center;
}

.view-avatar-root {
  display: flex;
  flex-grow: 1;
}

.view-avatar .cell-status {
  font-size: 24rpx;
  color: #acadaa;
}

.view-avatar .cell-status.red {
  font-size: 24rpx;
  color: #f55;
}

.clinic-content {
  margin-top: 20rpx;
  font-size: 30rpx;
  color: #090909;
}

.clinic-time {
  margin-top: 5rpx;
  font-size: 24rpx;
  color: #acadaa;
  align-self: flex-end;
}
