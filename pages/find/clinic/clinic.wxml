<import src='/pages/find/clinic/cell-clinic/cell-clinic.wxml' />
<import src='/components/empty-view/empty-view.wxml' />

<view class="view-root">
  <view class="view-tab">
    <view class="tab-item border" catchtap="onTabListener" data-position='0'>发起咨询</view>
    <view class="tab-item border" catchtap="onTabListener" data-position='1'>我的咨询</view>
    <view class="tab-item" catchtap="onTabListener" data-position='2'>知识库</view>
  </view>
  <view class='view-scroll'>
    <scroll-view class="scroll" scroll-y bindscrolltolower="onScrollReachBottom">
      <view class="view-list" wx:if="{{listArray.length>0}}">
        <template is="cell-clinic" data="{{...item,position:index}}" wx:for="{{listArray}}" wx:key="unique" />
      </view>
      <view wx:else class="view-empty">
        <template is="empty-view" data="{{title:'暂无咨询记录！'}}" />
      </view>
    </scroll-view>
  </view>
</view>