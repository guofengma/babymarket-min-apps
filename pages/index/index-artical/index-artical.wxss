/* index-artical.wxss */
@import '/pages/index/cell/artical-title-cell/artical-title-cell.wxss';
@import "/libs/wxParse/wxParse.wxss";

.root-view{
    height: 100%;
}

.root-view .title-view{
    width: 100%;
    height: 120rpx;
    background: #dbdbdb;
    position: fixed;
    top: 0rpx;
    z-index: 1000;
}

.artical{
    margin-top: 120rpx;
    padding-top: 20rpx;
    background: white;
}

/*收藏。点赞。吐槽*/
.view-btns {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding: 30rpx 15rpx;
  background: white;
}

.view-btns .collect-icon {
  width: 38rpx;
  height: 36rpx;
  flex: none;
  margin-right: 50rpx;
}

.view-btns .praise-icon {
  width: 38rpx;
  height: 30rpx;
  flex: none;
  margin-right: 50rpx;
}

.view-btns .discuss-icon {
  width: 42rpx;
  height: 38rpx;
  flex: none;
  margin-right: 25rpx;
}

/*猜你喜欢*/
.view-guess {
  padding: 30rpx 30rpx 30rpx 30rpx;
  display: flex;
  flex-direction: column;
  margin: 20rpx 0rpx 50rpx 0rpx;
  background: white;
}

.view-guess .guess-tips {
  font-size: 28rpx;
  color: #7d7f81;
}

.view-guess .guess-title {
  font-size: 32rpx;
  color: #090909;
  margin-top: 10rpx;
}

.view-guess .guess-total {
  display: flex;
  align-items: center;
  margin-top: 10rpx;
  margin-bottom: 30rpx;
}

.guess-total .texts {
  font-size: 28rpx;
  color: #7d7f81;
}

.guess-total .read-icon {
  width: 35rpx;
  height: 21rpx;
  flex: none;
  margin-left: 20rpx;
}

.guess-total .read-count {
  font-size: 24rpx;
  color: #7d7f81;
  margin-left: 10rpx;
}
