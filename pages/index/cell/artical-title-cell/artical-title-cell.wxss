.tab-layout {
    background-color: #dbdbdb;
    width: 100%;
    height: 120rpx;
    display: flex;
    flex-direction: row;
    flex: none;
    white-space: nowrap;
}

.tab-layout .tab {
    display: inline-flex;
    flex-direction: column;
    font-size: 28rpx;
    color: #494848;
    height: 100rpx;
    align-items: center;
    justify-content: space-around;
    margin-top: 10rpx;
    width: 240rpx;
}

.tab-layout .tab.select {
    color: white;
    background: #ff5555;
    border-radius: 10rpx;
}

.tab .line-one {
    font-size: 32rpx;
}

.tab .line-two {
    font-size: 28rpx;
}

.tab .today{
    color: #ff5555;
}
