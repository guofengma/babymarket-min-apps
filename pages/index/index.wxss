/* index.wxss */
@import '/pages/index/cell/index-artical-cell/index-artical-cell.wxss';
@import '/pages/index/cell/tool-cell/tool-cell.wxss';

.header-view {
    width: 706rpx;
    background: #ff5555;
    display: flex;
    flex-direction: column;
    align-items: center;
    color: white;
    padding: 0rpx 22rpx 90rpx 22rpx;
}

.header-view .top-view {
    width: 100%;
    height: 128rpx;
    display: flex;
    align-items: center;
}

.top-view .left-arrow {
    width: 60rpx;
    height: 60rpx;
    margin-left: 228rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.top-view .right-arrow {
    width: 60rpx;
    height: 60rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.date {
    font-size: 40rpx;
    margin-left: 22rpx;
    margin-right: 22rpx;
}

.search-icon {
    width: 60rpx;
    height: 60rpx;
    right: 22rpx;
    position: fixed;
    display: flex;
    justify-content: center;
    align-items: center;
}

.baby-age {
    font-size: 28rpx;
    margin-top: 10rpx;
}

.avatar {
    width: 244rpx;
    height: 244rpx;
    border-radius: 122rpx;
    margin-top: 60rpx;
}

.name {
    font-size: 34rpx;
    margin-top: 22rpx;
}

.height-weight {
    font-size: 24rpx;
    background: #d84d48;
    padding: 10rpx 20rpx;
    height: 28rpx;
    border-radius: 24rpx;
    text-align: center;
    line-height: 28rpx;
    margin-top: 24rpx;
}

.desp {
    font-size: 30rpx;
    line-height: 120%;
    background: white;
    color: #acadaa;
    padding: 22rpx 38rpx 20rpx 38rpx;
    border-radius: 300rpx;
    width: 606rpx;
    margin-top: 30rpx;
}

.index-artical-cell{
    background: white;
}

.question-view{
    padding: 40rpx 22rpx 40rpx 22rpx;
    display: flex;
    flex-direction: column;
    background: white;
    margin: 20rpx 0rpx;
}

.question-view .top-view{
    height: 46rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.top-view .title{
    font-size: 26rpx;
    color: #ff5555;
}

.top-view .button{
    font-size: 28rpx;
    color: #ff5555; 
    width: 196rpx;
    height: 46rpx;
    border: 2rpx solid #ff5555;
    border-radius: 23rpx;
    text-align: center;
    line-height: 46rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.question-icon{
    margin-right: 10rpx;
}

.question-view .content{
    margin-top: 30rpx;
    font-size: 30rpx;
    color: #494848;
}

.tool-view{
    padding: 0rpx 40rpx;
    background: white;
    display: flex;
}
