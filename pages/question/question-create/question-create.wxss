/* question-create.wxss */
@import '/components/image-picker/image-picker.wxss';

.input-area{
    background: white;
    border: 2rpx solid #acadaa;
    border-radius: 10rpx;
    margin: 30rpx 22rpx 15rpx 22rpx;
    height: 160rpx;
    padding: 20rpx;
    font-size: 26rpx;
    color: #090909;
    width: 666rpx;
}

.picture-line-view{
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0rpx 22rpx;
}

.picture-line-view .camera-logo{
    width: 86rpx;
    height: 86rpx;
}

.picture-line-view .right-view{
    display: flex;
    font-size: 24rpx;
    color: #494848;
    align-items: center;
}

.right-view .niming-image{
    margin-left: 10rpx;
    width: 28rpx;
    height: 28rpx;
}

.question-button{
    font-size: 32rpx;
    color: white;
    background: #ff5555;
    margin-left: 22rpx;
    width: 706rpx;
    line-height: 80rpx;
    height: 80rpx;
    text-align: center;
    border-radius: 10rpx;
    margin-top: 50rpx;
}