page {
  background-color: white;
}

.view-root {
  display: flex;
  flex-direction: column;
  border-top: 1rpx solid #f3f4f5;
  padding: 30rpx;
}

.view-row {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}

.tips-value {
  font-size: 32rpx;
  color: #090909;
  margin-left: 10rpx;
}

.tips-icon {
  width: 25rpx;
  height: 25rpx;
  flex: none;
}

.title {
  font-size: 28rpx;
  color: #494848;
}

.value {
  font-size: 28rpx;
  margin-left: 10rpx;
  color: #090909;
}

.view-btn {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 100rpx;
}

.bt-left {
  color: #454950;
  background: white;
  border: 2rpx solid #e3e3e3;
  border-radius: 10rpx;
  text-align: center;
  width: 345rpx;
  height: 75rpx;
  justify-content: center;
  display: flex;
  align-items: center;
  font-size: 30rpx;
}

.bt-right {
  color: #454950;
  border-radius: 10rpx;
  border: 2rpx solid #e3e3e3;
  background: white;
  width: 345rpx;
  margin-left: 20rpx;
  height: 75rpx;
  justify-content: center;
  display: flex;
  align-items: center;
  font-size: 30rpx;
}
