<!--日期筛选器-->
<template name="date-filter">
    <view class="date-filter">

        <!--开始日期-->
        <picker
                mode="date"
                value="{{startDate}}"
                end="{{startMaxDate}}"
                data-type="start"
                bindchange="datePickerChange"
        >
            <view>
              <text class='time'>开始时间： </text>  
              <text> {{startDate}}</text> 
            </view>
            <!-- <input placeholder="开始日期" value="{{startDate}}"/> -->
        </picker>

        <!--结束日期-->
        <picker
                mode="date"
                value="{{endDate}}"
                start="{{endMinDate}}"
                data-type="end"
                bindchange="datePickerChange"
        >
           <view> 
              <text class='time'>结束日期： </text> 
              <text> {{endDate}}</text> 
          </view>
            <!-- <input placeholder="结束日期" value="{{endDate}}"/> -->
        </picker>


    </view>
</template>